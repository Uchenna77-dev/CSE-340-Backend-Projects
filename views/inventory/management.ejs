<h1>Inventory Management</h1>
<% if (message) { %><p class="notice"><%= message %></p><% } %>
<ul class="management">
  <li><a href="/inv/add-classification">Add New Classification</a></li>
  <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
</ul>

<h2>Manage Inventory</h2>

  <p>Select a classification from the list to see the items belonging to that classification.</p>

  <!-- Classification dropdown rendered from server -->
  <div id="classificationDropdown">
    <%- classificationSelect %>
  </div>

  <!-- Inventory table placeholder -->
  <table id="inventoryDisplay"></table>

<h2>Manage Classification</h2>

<p>Delete Classification in which all Vehicles have been sold out</p>

<ul>
  <% classifications.forEach(classification => { %>
    <li>
      <a href="/inv/delete-classification/<%= classification.classification_id %>">
        Delete <%= classification.classification_name %>
      </a>
    </li>
  <% }); %>
</ul>



  <noscript>JavaScript must be enabled to use this page.</noscript>
</main>

<!-- Link your JavaScript file here -->
<script src="/js/inventory.js"></script>
